<UserControl x:Class="FinalProject.View.UserControls.TimeStampBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:outside="clr-namespace:FinalProject"
             xmlns:local="clr-namespace:FinalProject.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Created this button template so that I wouldn't have to change values of this template 80 times. If I change it here, all 80 buttons in the MakeSchedule page will change as well -->
        <Button Width="130" Height="31" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,6,0,0"
                Name="btnTimeStamp" FontSize="18" FontWeight="Bold"
                Click="btnTimeStamp_Click" Background="White"
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>
